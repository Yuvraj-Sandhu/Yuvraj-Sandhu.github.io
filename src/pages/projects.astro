<style>
    .project-inner {
        row-gap: 2rem;
    }
    .project-card {
        border-radius: 15px;
        padding: 25px;
        padding-bottom: 10px;
        /* background-color: rgba(34, 211, 238, 0.2);  */
        background-color: rgba(0, 171, 240, 0.25);
        width: 800px;
        box-shadow: 7px 10px 20px rgba(0, 0, 0, 0.2);
        transition: all 0.4s ease-in-out;
        transform-origin: center;

        @media (max-width: 768px) {
            column-count: 1;
            width: 100%;
            padding: 1rem 1rem 1rem;
        }
    }
    .project-image {
        position: relative;
        height: auto;
        width: 40%;
    }
    .project-img {
        height: 250px;
        width: 100%;
        border-radius: 7px;
        box-shadow: 3px 5px 16px rgba(0, 0, 0, 0.5);
        transition: all 0.3s ease-in-out;
    }
    .project-img:hover {
        transform: scale(1.03);
    }
    .project-button {
        position: absolute;
        right: 0;
        bottom: 0;
        padding: 0rem;
    }
    .project-content {
        margin-bottom: 1.25rem;
        position: relative;
        height: fit-content;
        width: 55%;
    }
    .project-subtitle {
        position: relative;
        display: flex;
        font-size: medium;
        font-weight: medium;
        color: #00abf0;
        justify-content: left;
        margin-bottom: -10px;
        bottom: 0;
        left: 5%;

        @media (max-width:768px) {
            margin-bottom: 10px;
        }
    }
    .project-subtitle-1 {
        position: relative;
        display: flex;
        font-size: medium;
        font-weight: medium;
        color: #00abf0;
        justify-content: right;
        margin-bottom: -10px;
        bottom: 0;
        right: 5%;

        @media (max-width: 768px) {
            position: relative;
            display: flex;
            font-size: medium;
            font-weight: medium;
            color: #00abf0;
            justify-content: left;
            margin-bottom: 10px;
            bottom: 0;
            left: 5%;
            right:auto;
        }
    }
    #button:hover {
        color: #00abf0;
        transform: translateY(-5px);
    }
    .project {
        margin-bottom: 0.25rem;
        font-size: large;
        color: #00abf0;
        text-align: left;
    }
    .project-1 {
        text-align: right;
        margin-bottom: 0.25rem;
        font-size: large;
        color: #00abf0;
        right: 0;

        @media (max-width: 768px) {
            margin-bottom: 0.25rem;
            font-size: large;
            color: #00abf0;
            text-align: left;
        }
    }
    .project-title {
        margin-bottom: 0.25rem;
        font-size: xx-large;
        font-weight: bold;
        text-align: left;
    }
    .project-title-1 {
        text-align: right;
        margin-bottom: 0.25rem;
        font-size: xx-large;
        font-weight: bold;
        right: 0;

        @media (max-width:768px) {
            margin-bottom: 0.25rem;
            font-size: xx-large;
            font-weight: bold;
            text-align: left;
        }
    }
    .project-desc {
        text-align: left;
        margin-right: 15px;
    }
    .project-desc-1 {
        text-align: right;
        margin-left: 15px;
        @media (max-width: 768px) {
            text-align: left;
            margin-right: 15px;
            margin-left: 0px;
        }
    }
    
    .project-link {
        display: flex;
        align-items: center;
        column-gap: 0.25rem;
        color: #00abf0;
        font-size: small;
        font-weight: medium;
        transition: color 0.4s;
    }
    .project-card:hover {
        box-shadow: 7px 10px 40px rgba(0, 0, 0, 0.3);
        transform: scale(1.03);
    }
    .title-link:hover {
        color: #00abf0;
    }
    .left {
        float: left;
        width: 50%;
        @media ((max-width:768px)) {
            width: 100%;
        }
    }
    .right {
        float: right;
        width: 50%;
        @media ((max-width:768px)) {
            width: 100%;
        }
    }
    .row:after {
        content: '';
        display: table;
        clear: both;
    }
</style>
